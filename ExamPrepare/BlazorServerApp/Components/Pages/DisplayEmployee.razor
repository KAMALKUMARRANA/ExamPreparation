@inherits DisplayEmployeeBase
<div class="card m-3" style="min-width: 18rem; max-width:30.5%">
    <img src="@emp.PhotoPath" class="card-img-top imageThumb" alt="...">
    <div class="card-body">
        <h5 class="card-title">@emp.FirstName @emp.LastName</h5>
        <p class="card-text">@emp.Email</p>
        
    </div>
    @if (ShowFooter)
    {
        <div>
            <a href="@($"/employeedetails/{emp.EmployeeId}")" class="btn btn-primary">View</a>
    </div>
    }
</div>